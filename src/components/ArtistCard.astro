---
const { content } = Astro.props;
const { name, title, materials, image, website } = content.frontmatter;
const body = content.body;
---

<div class="card">
  <img src={image} alt={name} style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 1rem;" />
  <h3>{name}</h3>
  <p><em>{title}</em></p>
  <p><strong>Materials:</strong> {materials.join(', ')}</p>
  {website && <p><a href={website} target="_blank" rel="noopener">Artistâ€™s website</a></p>}
  <div style="margin-top: 1rem; font-size: 0.95rem;">{body}</div>
</div>
